.type-tag {
  position: relative;
  display: block;
  background-color: #bfbfbf;
  color: #fff;
  font-size: 28rpx;
  height: 36rpx;
  padding: 8rpx 10rpx;
  border-radius: 36rpx;
  margin-right: 24rpx;
  margin-bottom: 22rpx;
  min-width: 100rpx;
  text-align: center;
}

.delete-icon {
  position: absolute;
  right: -5px;
  top: -5px;
  display: none;
  box-shadow:0 0 3px 0 rgba(0,0,0,0.3);
  border-radius:50%;
}

.active {
  background-color: #fa8080;
}

.delete-icon-show {
  display: block;
}