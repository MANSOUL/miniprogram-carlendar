/* pages/account/index.wxss */
.account-container {
  background-color: #323039;
  min-height: 100vh;
}
.carlendar-box {
  width: 720rpx;
  margin: 0 auto;
  padding-top: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 10rpx 0 rgba(0,0,0,0.1);
}

.scroll-view {
  height: 50vh;
}

.create-new {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 220rpx;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  line-height: 110rpx;
  text-align: center;
  /* background-color: #fe8080; */
  /* background: linear-gradient(170deg, #2ebf73, #5cb2d3); */
  background: #5cb2d3;
  border-radius: 100%;
  color: #fff;
  font-size: 70rpx;
  box-shadow: 2rpx 2rpx 8rpx 0 rgba(0,0,0,0.3);
  z-index: 9;
}

/*total*/
.total-item {
  display: flex;
  justify-content: space-between;
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 44rpx;
  text-align: right;
  font-size: 44rpx;
  color: #5cb2d3;
  font-weight: bold;
  background-color: #383e48;
}

/*spend*/
.spend-list {
  margin-top: 40rpx;
}

.spend-item {
  width: 100%;
  padding: 0 44rpx;
  color: #fff;
  /* background-color: ; */
}
.spend-item-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  /* border-bottom: 1px solid #efefef; */
}
.spend-item-left {
  display: flex;
  align-items: center;
}
.time {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}
.tag {
  font-size: 36rpx;
}
.spend {
  font-size: 36rpx;
  font-weight: bold;
}

/*no-record*/
.no-record {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa;
}



/* ------------------------- */
.page__box {
  padding: 40rpx;
  padding-bottom: 0;
}

/* auth layer */
.auth {
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9;
}

.auth__button {
  background-color: transparent;
  color: #5cb2d3;
  text-decoration: underline;
  font-weight: bold;
}

.dashpad {
  display: flex;
  align-items: center;
}

.dash {
  color: #ffffff;
  flex-grow: 1;
}

.dash__label {
  display: block;
  font-size: 46rpx;
  font-weight: bold;
}

.dash__time {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 4rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dash_uname {
  color: #5cb2d3;
}

.dash__avatar {
  width: 90rpx;
  height: 90rpx;
  flex-shrink: 0;
  border-radius: 50%;
  background-size: contain;
}

.upload-btn {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn--upload::before {
  content: "";
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-image: url("http://cdn.jokme.com/upload1.png");
  background-size: contain;
  border-radius: 50%;
  background-repeat: no-repeat;
}

.upload-btn--uploading::before {
  content: "";
  display: block;
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #fff;
  border-bottom-color: transparent;
  border-radius: 50%;
  animation: rotate .5s infinite linear;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.chart__canvas {
  background-color: #fff;
}

.record {
  color: #5cb2d3;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* music card */
.mcard {
  width: 100%;
  /* height: 240rpx; */
  margin-top: 30rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

/*  */
.tile {
  color: #ffffff;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
  margin-top: 60rpx;
}

.tile--bm {
  margin-top: 90rpx;
}

.tile::before {
  content: "";
  width: 9rpx;
  height: 1em;
  display: inline-block;
  border-radius: 6rpx;
  margin-right: 14rpx;
  background: linear-gradient(180deg, #2ebf73 0%, #5cb2d3 100%);
}

/*  */
.account__item {
  color: #ffffff;
  display: flex;
  justify-content: space-between;
  line-height: 1.5;
  margin-top: 34rpx;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #383e48;
}

.account__label {
  font-size: 28rpx;
}

.account__value {
  color: #5cb2d3;
  font-weight: bold;
  font-size: 31rpx;
}