.mdard {
  background-color: #383e48;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  padding: 18rpx 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 10rpx 8rpx 0 rgba(0, 0, 0, 0.2);
}
/*  */
.beats {
  width: 100%;
  height: 100rpx;
  /* background-color: rgba(255, 255, 255, 0.1); */
  margin-top: 4rpx;
}
.beats__canvas {
  width: 100%;
  height: 100%;
}
/*  */
.info {
  display: flex;
  align-items: center;
  overflow: hidden;
  margin-top: 40rpx;
}
.info__mavatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-size: contain;
  overflow: hidden;
}
.info__mavatar::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.2);
}
/* pause icon */
.info__icon,
.info__icon::before,
.info__icon::after {
  content: "";
  width: 6rpx;
  background-color: #fff;
  border-radius: 6rpx;
  transition: all .2s;
}
.info__mavatar--pause .info__icon {
  position: absolute;
  height: 40rpx;
  top: 20rpx;
  left: 30rpx;
  z-index: 2;
}
.info__mavatar--pause .info__icon::before {
  transform-origin: center top;
  position: absolute;
  height: 30rpx;
  top: 2rpx;
  left: 0;
  transform: rotate(-50deg);
}
.info__mavatar--pause .info__icon::after {
  transform-origin: center bottom;
  position: absolute;
  height: 30rpx;
  bottom: 2rpx;
  left: 0;
  transform: rotate(50deg);
}
.info__mavatar--play .info__icon {
  position: absolute;
  height: 40rpx;
  top: 20rpx;
  left: 25rpx;
  z-index: 2;
}
.info__mavatar--play .info__icon::before {
  position: absolute;
  height: 40rpx;
  top: 0;
  left: 20rpx;
}


.info__box {
  margin-left: 10px;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #fff;
}
.info__mname {
  display: block;
}
.info__maname {
  display: block;
  font-size: 24rpx;
}
