/* pages/account/index.wxss */
.account-container {
  background-color: #323039;
  height: 100vh;
  /* overflow: hidden; */
}
.carlendar-box {
  width: 720rpx;
  margin: 0 auto;
  padding-top: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 10rpx 0 rgba(0,0,0,0.1);
}

.scroll-view {
  height: 50vh;
}

.create-new {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 100rpx;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  line-height: 110rpx;
  text-align: center;
  /* background-color: #fe8080; */
  /* background: linear-gradient(170deg, #2ebf73, #5cb2d3); */
  background: #5cb2d3;
  border-radius: 100%;
  color: #fff;
  font-size: 70rpx;
  box-shadow: 2rpx 2rpx 8rpx 0 rgba(0,0,0,0.3);
  z-index: 9;
}

/*total*/
.total-item {
  display: flex;
  justify-content: space-between;
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 44rpx;
  text-align: right;
  font-size: 44rpx;
  color: #5cb2d3;
  font-weight: bold;
  background-color: #383e48;
}

/*spend*/
.spend-list {
  margin-top: 40rpx;
}

.spend-item {
  width: 100%;
  padding: 0 44rpx;
  color: #fff;
  /* background-color: ; */
}
.spend-item-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  /* border-bottom: 1px solid #efefef; */
}
.spend-item-left {
  display: flex;
  align-items: center;
}
.time {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}
.tag {
  font-size: 36rpx;
}
.spend {
  font-size: 36rpx;
  font-weight: bold;
}

/*no-record*/
.no-record {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa;
}